<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body style="padding-top:15px">
    <div class="container-fluid">
        <p style="text-align:right">Здравствуйте, @User.Identity.Name!</p>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            @Html.ActionLink("Definition Media Library", "Index", "dmlcatalogs", new { id = 0 }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Домашняя страница", "Index", "dmlcatalogs", new { id = 0 }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Приложения", "Index", "dmlcatalogs", new { id = 1 }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Драйвера", "Index", "dmlcatalogs", new { id = 2 }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("ОС", "Index", "dmlcatalogs", new { id = 3 }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Скрипты", "Index", "dmlcatalogs", new { id = 4 }, new { @class = "nav-link" })
                    </li>
                </ul>

                <form class="form-inline my-2 my-lg-0" method="get" action="@Url.Action("Search", "dmlcatalogs")">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search" id="search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">

                @if (ViewBag.groups.Contains("DMLAdmins"))
                            {
                                <aside class="col-md-1">
                                    <ul class="list-group submenu">
                                        <li class="list-group-item">
                                            @Html.ActionLink("Список ПО", "Index", "dmlcatalogs")
                                        </li>
                                        <li class="list-group-item">
                                            @Html.ActionLink("История изменений", "Index", "dmlhistories")
                                        </li>
                                        <li class="list-group-item">
                                            @Html.ActionLink("Список локализаций", "Index", "dmllocalizes")
                                        </li>
                                        <li class="list-group-item">
                                            @Html.ActionLink("Список разработчиков", "Index", "dmlpublishers")
                                        </li>
                                        <li class="list-group-item">
                                            @Html.ActionLink("Список состояний", "Index", "dmlstates")
                                        </li>
                                        <li class="list-group-item">@Html.ActionLink("Список типов ПО", "Index", "dmltypes")</li>
                                    </ul>
                                </aside>
                            }
                            <section class="col-md-11" style="padding-top:15px">

                                @RenderBody()
                                <hr />
                                <footer>
                                    <p>&copy; @DateTime.Now.Year – DML-каталог <a href="mailto:dml@gmail.com">dml@gmail.com</a></p>
                                </footer>

                            </section>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
